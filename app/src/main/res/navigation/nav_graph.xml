<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.luke.codejpmc.ui.main.MainFragment"
        android:label="main_fragment"
        tools:layout="@layout/main_fragment">
        <action android:id="@+id/action_mainFragment_to_albumDetailFragment"
            app:destination="@id/albumDetailsFragment"/>
            />
    </fragment>


    <fragment
        android:id="@+id/albumDetailsFragment"
        android:name="com.luke.codejpmc.ui.main.AlbumDetailsFragment"
        android:label="album_details_fragment"
        tools:layout="@layout/fragment_album_details" >

        <argument android:name="albumId"
            app:argType="integer"/>
        />
    </fragment>
</navigation>